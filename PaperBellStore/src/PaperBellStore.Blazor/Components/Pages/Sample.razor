@page "/sample"
@inherits PaperBellStoreComponentBase
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<PageTitle>示例页面</PageTitle>

@* 隐藏的面包屑，将通过JS插入到顶栏，使用ABP主题的lpx-breadcrumb-item类 *@
<div id="sample-breadcrumb-container" style="display: none;">
    <nav aria-label="breadcrumb" style="margin: 0;">
        <ol class="lpx-breadcrumb"
            style="background: transparent; padding: 0; margin: 0; list-style: none; display: flex; align-items: center;">
            <li class="lpx-breadcrumb-item">
                <a href="/" style="text-decoration: none; color: #686B6E; display: flex; align-items: center;">
                    <i class="fas fa-home" style="font-size: 11.6px;"></i>
                </a>
            </li>
            <li class="lpx-breadcrumb-item">
                <span
                    style="color: #686B6E; font-size: 11.6px; font-family: 'Inter', sans-serif;">@L["Menu:SampleGroup"]</span>
            </li>
            <li class="lpx-breadcrumb-item active">
                <span
                    style="color: #686B6E; font-size: 11.6px; font-family: 'Inter', sans-serif;">@L["Menu:Sample"]</span>
            </li>
        </ol>
    </nav>
</div>

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">示例页面</h3>
                </div>
                <div class="card-body">
                    <p>这是一个示例页面，用于演示如何在菜单中添加导航项。</p>

                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        您可以通过左侧菜单访问此页面。
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <h5>功能特性</h5>
                            <ul>
                                <li>菜单导航集成</li>
                                <li>响应式布局</li>
                                <li>本地化支持</li>
                                <li>主题样式</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5>技术栈</h5>
                            <ul>
                                <li>Blazor Server</li>
                                <li>ABP Framework</li>
                                <li>Blazorise UI</li>
                                <li>Bootstrap 5</li>
                            </ul>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h5>示例卡片</h5>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="card border-primary">
                                    <div class="card-body">
                                        <h6 class="card-title">功能 1</h6>
                                        <p class="card-text">这是第一个示例功能卡片。</p>
                                        <button class="btn btn-primary btn-sm">了解更多</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card border-success">
                                    <div class="card-body">
                                        <h6 class="card-title">功能 2</h6>
                                        <p class="card-text">这是第二个示例功能卡片。</p>
                                        <button class="btn btn-success btn-sm">了解更多</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card border-info">
                                    <div class="card-body">
                                        <h6 class="card-title">功能 3</h6>
                                        <p class="card-text">这是第三个示例功能卡片。</p>
                                        <button class="btn btn-info btn-sm">了解更多</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
