@page "/log-test"
@inherits PaperBellStoreComponentBase
@implements IAsyncDisposable

<PageTitle>日志测试</PageTitle>

@* 隐藏的面包屑，将通过JS插入到顶栏 *@
<div id="log-test-breadcrumb-container" style="display: none;">
    <nav aria-label="breadcrumb" style="margin: 0;">
        <ol class="lpx-breadcrumb"
            style="background: transparent; padding: 0; margin: 0; list-style: none; display: flex; align-items: center;">
            <li class="lpx-breadcrumb-item">
                <a href="/" style="text-decoration: none; color: #686B6E; display: flex; align-items: center;">
                    <i class="fas fa-home" style="font-size: 11.6px;"></i>
                </a>
            </li>
            <li class="lpx-breadcrumb-item">
                <span style="color: #686B6E; font-size: 11.6px; font-family: 'Inter', sans-serif;">@L["Menu:LogTestGroup"]</span>
            </li>
            <li class="lpx-breadcrumb-item active">
                <span style="color: #686B6E; font-size: 11.6px; font-family: 'Inter', sans-serif;">@L["Menu:LogTest"]</span>
            </li>
        </ol>
    </nav>
</div>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-file-alt me-2"></i>@L["Menu:LogTest"]
                    </h3>
                </div>
                <div class="card-body">
                    @* 测试写入日志区域 *@
                    <div class="mb-4">
                        <h5 class="mb-3">
                            <i class="fas fa-plus-circle me-2"></i>测试写入日志
                        </h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">日志级别</label>
                                <select class="form-select" @bind="testLogLevel" @bind:event="onchange">
                                    <option value="Verbose">Verbose</option>
                                    <option value="Debug">Debug</option>
                                    <option value="Information">Information</option>
                                    <option value="Warning">Warning</option>
                                    <option value="Error">Error</option>
                                    <option value="Fatal">Fatal</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">日志消息</label>
                                <input type="text" class="form-control" @bind="testLogMessage" placeholder="输入测试日志消息" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <input type="checkbox" class="form-check-input me-2" @bind="includeException" />
                                    包含异常信息
                                </label>
                            </div>
                        </div>
                        <button class="btn btn-primary" @onclick="WriteTestLog" disabled="@isWriting">
                            <i class="fas fa-paper-plane me-2"></i>
                            @if (isWriting)
                            {
                                <span>写入中...</span>
                            }
                            else
                            {
                                <span>写入测试日志</span>
                            }
                        </button>
                        @if (!string.IsNullOrEmpty(writeResult))
                        {
                            <div class="alert @(writeResult.Contains("成功") ? "alert-success" : "alert-danger") mt-2" role="alert">
                                @writeResult
                            </div>
                        }
                    </div>

                    <hr />

                    @* 过滤和搜索区域 *@
                    <div class="mb-3">
                        <h5 class="mb-3">
                            <i class="fas fa-filter me-2"></i>过滤和搜索
                        </h5>
                        <div class="row">
                            <div class="col-md-3 mb-2">
                                <label class="form-label">日志级别</label>
                                <select class="form-select" @bind="selectedLevel" @bind:event="onchange">
                                    <option value="">全部</option>
                                    <option value="Verbose">Verbose</option>
                                    <option value="Debug">Debug</option>
                                    <option value="Information">Information</option>
                                    <option value="Warning">Warning</option>
                                    <option value="Error">Error</option>
                                    <option value="Fatal">Fatal</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-2">
                                <label class="form-label">开始时间</label>
                                <input type="datetime-local" class="form-control" @bind="startDate" @bind:event="onchange" />
                            </div>
                            <div class="col-md-3 mb-2">
                                <label class="form-label">结束时间</label>
                                <input type="datetime-local" class="form-control" @bind="endDate" @bind:event="onchange" />
                            </div>
                            <div class="col-md-3 mb-2">
                                <label class="form-label">搜索消息</label>
                                <input type="text" class="form-control" @bind="searchText" @bind:event="oninput" placeholder="搜索日志消息..." />
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <button class="btn btn-secondary me-2" @onclick="ResetFilters">
                                    <i class="fas fa-redo me-2"></i>重置过滤
                                </button>
                                <button class="btn btn-primary" @onclick="LoadLogs">
                                    <i class="fas fa-search me-2"></i>搜索
                                </button>
                            </div>
                        </div>
                    </div>

                    <hr />

                    @* 日志列表区域 *@
                    <div>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="mb-0">
                                <i class="fas fa-list me-2"></i>日志列表
                                @if (totalCount > 0)
                                {
                                    <span class="badge bg-primary ms-2">共 @totalCount 条</span>
                                }
                            </h5>
                            <button class="btn btn-sm btn-outline-primary" @onclick="LoadLogs">
                                <i class="fas fa-sync-alt me-2"></i>刷新
                            </button>
                        </div>

                        @if (isLoading)
                        {
                            <div class="text-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">加载中...</span>
                                </div>
                            </div>
                        }
                        else if (logs == null || !logs.Any())
                        {
                            <div class="alert alert-info" role="alert">
                                <i class="fas fa-info-circle me-2"></i>暂无日志数据
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>时间</th>
                                            <th>级别</th>
                                            <th>消息</th>
                                            <th>出现次数</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var log in logs)
                                        {
                                            <tr>
                                                <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                                <td>
                                                    <span class="badge @GetLevelBadgeClass(log.Level)">
                                                        @log.Level
                                                    </span>
                                                </td>
                                                <td>
                                                    <div style="max-width: 400px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="@log.Message">
                                                        @log.Message
                                                    </div>
                                                </td>
                                                <td>
                                                    @if (log.OccurrenceCount > 1)
                                                    {
                                                        <span class="badge bg-warning">@log.OccurrenceCount 次</span>
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-info" @onclick="() => ShowLogDetail(log)">
                                                        <i class="fas fa-eye me-1"></i>详情
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            @* 分页 *@
                            <nav aria-label="日志分页">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                                        <a class="page-link" href="#" @onclick="() => ChangePage(currentPage - 1)" @onclick:preventDefault>上一页</a>
                                    </li>
                                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link" href="#" @onclick="() => ChangePage(i)" @onclick:preventDefault>@i</a>
                                        </li>
                                    }
                                    <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                                        <a class="page-link" href="#" @onclick="() => ChangePage(currentPage + 1)" @onclick:preventDefault>下一页</a>
                                    </li>
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* 日志详情模态框 *@
@if (selectedLog != null)
{
    <div class="modal fade show" style="display: block;" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">日志详情</h5>
                    <button type="button" class="btn-close" @onclick="CloseLogDetail"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>时间:</strong> @selectedLog.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")
                        </div>
                        <div class="col-md-6">
                            <strong>级别:</strong>
                            <span class="badge @GetLevelBadgeClass(selectedLog.Level)">@selectedLog.Level</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <strong>消息:</strong>
                            <div class="border p-2 mt-1" style="max-height: 200px; overflow-y: auto;">
                                @selectedLog.Message
                            </div>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(selectedLog.Exception))
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <strong>异常信息:</strong>
                                <div class="border p-2 mt-1" style="max-height: 200px; overflow-y: auto; font-family: monospace; font-size: 0.9em;">
                                    <pre style="white-space: pre-wrap; word-wrap: break-word; margin: 0;">@selectedLog.Exception</pre>
                                </div>
                            </div>
                        </div>
                    }
                    @if (selectedLog.OccurrenceCount > 1)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>首次出现:</strong> @selectedLog.FirstOccurrence?.ToString("yyyy-MM-dd HH:mm:ss")
                            </div>
                            <div class="col-md-4">
                                <strong>最后出现:</strong> @selectedLog.LastOccurrence?.ToString("yyyy-MM-dd HH:mm:ss")
                            </div>
                            <div class="col-md-4">
                                <strong>出现次数:</strong> <span class="badge bg-warning">@selectedLog.OccurrenceCount</span>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(selectedLog.Properties))
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <strong>属性 (JSON):</strong>
                                <div class="border p-2 mt-1" style="max-height: 200px; overflow-y: auto; font-family: monospace; font-size: 0.9em;">
                                    <pre style="white-space: pre-wrap; word-wrap: break-word; margin: 0;">@selectedLog.Properties</pre>
                                </div>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(selectedLog.LogEvent))
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <strong>日志事件 (JSON):</strong>
                                <div class="border p-2 mt-1" style="max-height: 200px; overflow-y: auto; font-family: monospace; font-size: 0.9em;">
                                    <pre style="white-space: pre-wrap; word-wrap: break-word; margin: 0;">@selectedLog.LogEvent</pre>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseLogDetail">关闭</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show" @onclick="CloseLogDetail"></div>
}

